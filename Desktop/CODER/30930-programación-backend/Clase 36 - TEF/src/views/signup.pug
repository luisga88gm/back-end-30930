
html
    head
        title FORMULARIO DE INGRESO
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    body(class="bg-success text-light")
        div(class="container mt-3")
            div
                h1 Registro de Usuario
                br
                form(action="/api/auth/signup" method="post" autocomplete="off")
                    div(class="form-group")
                        label(for="email") Email
                        input(id="email" class="form-control" type="email" name="email" required)
                        label(for="password") Clave
                        input(id="password" class="form-control" type="text" name="password" required)
                        label(id="nombre") Nombre 
                        input(id="nombre" class="form-control" type="text" name="nombre" required)
                        label(id="apellido") Apellido
                        input(id="apellido" class="form-control" type="text" name="apellido" required)
                        label(id="direccion") Direccion 
                        input(id="direccion" class="form-control" type="text" name="direccion" required)
                        label(id="edad") Edad 
                        input(id="edad" class="form-control" type="number" name="edad" required)
                        label(id="codPais") Pref Pais(+) 
                        input(id="codPais" class="form-control" type="number" name="codPais" required)
                        label(id="telefono") Telefono 
                        input(id="telefono" class="form-control" type="number" name="telefono" required)
                        label(id="foto") Foto 
                        input(id="foto" class="form-control" type="text" name="foto" required)
                        br
                    button(class="btn btn-primary") Registrarse 
                form(class="ms-4 mt-5" method="link" action="./login" style="width:50%;")
                    p Ya tiene usuario?
                    button(type="submit" class="btn btn-primary") Ingresar

